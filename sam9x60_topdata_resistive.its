/dts-v1/;

/ {
	description = "Microchip SAM9X60 FIT Image";
	#address-cells = <1>;

	images {
		kernel {
			description = "Linux4SAM Linux kernel";
			data = /incbin/("./zImage");
			type = "kernel";
			arch = "arm";
			os = "linux";
			compression = "none";
			load = <0x22000000>;
			entry = <0x22000000>;
			hash-1 {
				algo = "crc32";
			};
			hash-2 {
				algo = "sha1";
			};
		};

		base_fdt {
			description = "SAM9X60-Curiosity Flattened Device Tree blob";
			data = /incbin/("./at91-sam9x60_curiosity.dtb");
			type = "flat_dt";
			arch = "arm";
			compression = "none";
			load = <0x23000000>;
			hash-1 {
				algo = "crc32";
			};
			hash-2 {
				algo = "sha1";
			};
		};

		fdt_resistive {
			description = "Device Tree blob resistive touch overlay";
			data = /incbin/("./sam9x60_topdata/sam9x60_topdata_resistive.dtbo");
			type = "flat_dt";
			arch = "arm";
			compression = "none";
			load = <0x23100000>;
			hash-1 {
				algo = "crc32";
			};
			hash-2 {
				algo = "sha1";
			};
		};

    };

	configurations {
		default = "kernel_dtb";

		kernel_dtb {
			description = "Linux kernel and base FDT blob for SAM9X60-Curiosity board";
			kernel = "kernel";
			fdt = "base_fdt";
		};

		base_dtb {
			description = "Base FDT blob for SAM9X60 Topdata board";
			fdt = "base_fdt";
		};

		resistive {
			description = "FDT overlay blob for resistive touch screen";
			fdt = "fdt_resistive";
		};

		wilc {
			description = "FDT overlay blob for WILC3000";
			fdt = "fdt_wilc3000";
		};
	};
};
